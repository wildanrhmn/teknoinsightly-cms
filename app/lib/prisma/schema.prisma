generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id          String        @id
  name        String        @unique
  password    String        @default("")
  email       String        @unique
  phone       String
  bio         String
  image       String?
  role        String        @default("user")
  PopularPost PopularPost[]
  Post        Post[]
}

model Category {
  id   String @id
  name String
  slug String @unique
  type String
  Post Post[]
}

model Comment {
  id         String   @id
  name       String
  email      String
  website    String?
  message    String
  id_post    String
  created_at DateTime @default(now())
  Post       Post     @relation(fields: [id_post], references: [id])
}

model Contacted {
  id           String  @id
  name         String
  email        String
  organization String?
  message      String
}

model PopularPost {
  id         String   @id
  title      String
  image      String?
  type       String
  id_author  String
  created_at DateTime
  Author     Author   @relation(fields: [id_author], references: [id])
}

model Post {
  id          String    @id @default(cuid())
  title       String
  created_at  DateTime  @default(now())
  updated_at  DateTime  @default(now())
  image       String[]
  type        String
  body        String
  id_category String
  id_author   String
  summary     String    @default("")
  Comment     Comment[]
  Author      Author    @relation(fields: [id_author], references: [id])
  Category    Category  @relation(fields: [id_category], references: [id])
}
